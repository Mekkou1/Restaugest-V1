# API Configuration
VUE_APP_API_URL=http://localhost:5000
VUE_APP_WS_URL=ws://localhost:5000

# Authentication
VUE_APP_JWT_SECRET=votre_clé_secrète_sécurisée_pour_jwt_tokens
VUE_APP_SESSION_DURATION=86400000
VUE_APP_SESSION_REFRESH_THRESHOLD=300000

# Application Configuration
VUE_APP_TITLE=Restaugest
VUE_APP_DESCRIPTION=Système de gestion de restaurant
VUE_APP_VERSION=1.0.0

# Feature Flags
VUE_APP_ENABLE_PWA=true
VUE_APP_ENABLE_NOTIFICATIONS=true
VUE_APP_ENABLE_OFFLINE_MODE=true

# UI Configuration
VUE_APP_PRIMARY_COLOR=#ff6600
VUE_APP_SECONDARY_COLOR=#343a40
VUE_APP_DEFAULT_THEME=light
VUE_APP_DEFAULT_LANGUAGE=fr

# Performance
VUE_APP_MAX_ITEMS_PER_PAGE=50
VUE_APP_DEBOUNCE_DELAY=300

# Security
VUE_APP_MAX_LOGIN_ATTEMPTS=5
VUE_APP_LOCKOUT_DURATION=1800000
VUE_APP_PASSWORD_MIN_LENGTH=6

# Timeouts (in milliseconds)
VUE_APP_API_TIMEOUT=30000
VUE_APP_NOTIFICATION_DURATION=5000
VUE_APP_SESSION_CHECK_INTERVAL=60000

# File Upload
VUE_APP_MAX_FILE_SIZE=5242880
VUE_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache
VUE_APP_CACHE_DURATION=3600000
VUE_APP_ENABLE_REQUEST_CACHE=true

# Error Reporting
VUE_APP_ERROR_REPORTING_LEVEL=warning
